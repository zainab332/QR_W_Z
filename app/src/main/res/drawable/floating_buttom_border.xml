<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche pour la bordure -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="7dp"
            android:color="@color/white" /> <!-- Couleur de la bordure -->
        </shape>
    </item>

    <!-- Couche pour le fond du bouton -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- Couleur de fond -->
        </shape>
    </item>
</layer-list>
